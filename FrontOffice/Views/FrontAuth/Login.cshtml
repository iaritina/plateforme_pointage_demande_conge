@model FrontOffice.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Connexion";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mon Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #2563eb;
            --text-dark: #1e293b;
            --text-muted: #64748b;
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        /* Colonne de gauche : Formulaire */
        .left-side {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            padding: 2rem;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
        }

        .brand-logo {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary-color);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .login-title {
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            color: var(--text-muted);
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--text-dark);
        }

        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            margin-bottom: 0.25rem;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        .btn-login {
            background-color: var(--text-dark);
            color: white;
            padding: 0.75rem;
            border-radius: 8px;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
            border: none;
            transition: all 0.2s;
        }

        .btn-login:hover {
            background-color: #000;
            transform: translateY(-1px);
        }

        /* Colonne de droite : Image */
        .right-side {
            flex: 1.2;
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.9), rgba(30, 41, 59, 0.9)), 
                        url('https://images.unsplash.com/photo-1497215728101-856f4ea42174?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 4rem;
            color: white;
        }

        .illustration-content h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .illustration-content p {
            font-size: 1.1rem;
            opacity: 0.9;
            max-width: 500px;
            line-height: 1.6;
        }

        .feature-list {
            margin-top: 2rem;
            list-style: none;
            padding: 0;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            font-weight: 500;
        }

        .check-icon {
            background: rgba(255, 255, 255, 0.2);
            padding: 4px;
            border-radius: 50%;
            font-size: 0.8rem;
        }

        @@media (max-width: 992px) {
            .right-side {
                display: none;
            }
        }
    </style>
</head>
<body>

<div class="split-screen">
    <!-- Côté Gauche : Formulaire -->
    <div class="left-side">
        <div class="login-box">
            <div class="brand-logo">
                <div style="width: 32px; height: 32px; background: var(--primary-color); border-radius: 6px;"></div>
                MonApp
            </div>
            
            <h1 class="login-title">Bon retour !</h1>
            <p class="login-subtitle">Veuillez entrer vos identifiants pour accéder à votre compte.</p>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger py-2 small">
                        @Html.ValidationSummary(true, "")
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Adresse Email</label>
                    <input asp-for="Email" class="form-control" placeholder="nom@exemple.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <label asp-for="Password" class="form-label">Mot de passe</label>
                        <a href="#" class="text-decoration-none small" style="color: var(--primary-color)">Oublié ?</a>
                    </div>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="remember">
                    <label class="form-check-label small text-muted" for="remember">Se souvenir de moi</label>
                </div>

                <button type="submit" class="btn-login">
                    Se connecter
                </button>
            </form>
            
        </div>
    </div>

    <!-- Côté Droit : Illustration -->
    <div class="right-side">
        <div class="illustration-content">
            <h2>Gérez vos absences en toute simplicité.</h2>
            <p>Rejoignez des milliers d'utilisateurs qui optimisent leur temps et leur productivité grâce à notre plateforme intuitive.</p>
            
            <ul class="feature-list">
                <li class="feature-item">
                    <span class="check-icon">✓</span>
                    Suivi en temps réel des demandes
                </li>
                <li class="feature-item">
                    <span class="check-icon">✓</span>
                    Interface fluide et moderne
                </li>
                <li class="feature-item">
                    <span class="check-icon">✓</span>
                    Sécurité des données garantie
                </li>
            </ul>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
</body>
</html>
