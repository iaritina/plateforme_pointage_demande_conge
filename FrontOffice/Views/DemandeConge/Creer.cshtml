@model FrontOffice.ViewModel.DemandeCongeCreateViewModel
@{
ViewData["Title"] = "Nouvelle demande d'absence";
}

<style>
    :root {
        --primary-dark: #1e293b;
        --bg-light: #f8fafc;
        --border-color: #e2e8f0;
        --text-muted: #64748b;
        --accent-blue: #3b82f6;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
        padding: 2rem;
        border: 1px solid var(--border-color);
    }

    .solde-badge {
        background: #f0f9ff;
        border: 1px solid #bae6fd;
        border-radius: 12px;
        padding: 0.75rem 1.25rem;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .solde-icon {
        color: #0369a1;
        font-size: 1.25rem;
        display: flex;
        align-items: center;
    }

    .section-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.025em;
        margin-bottom: 1.25rem;
        display: block;
    }

    /* Cards for Absence Types */
    .absence-types-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 2.5rem;
    }

    .type-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        position: relative;
    }

    .type-card:hover {
        border-color: var(--accent-blue);
        background-color: #f8fafc;
    }

    .type-card.active {
        border-color: var(--accent-blue);
        background-color: #eff6ff;
        box-shadow: 0 0 0 1px var(--accent-blue);
    }

    .type-icon {
        width: 42px;
        height: 42px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .icon-conge { background: #dbeafe; color: #1e40af; }
    .icon-permission { background: #fef3c7; color: #92400e; }
    .icon-mission { background: #dcfce7; color: #166534; }
    .icon-maladie { background: #fee2e2; color: #991b1b; }

    .type-info h4 {
        font-size: 0.9rem;
        font-weight: 600;
        margin: 0;
        color: var(--primary-dark);
    }

    .type-info p {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin: 0;
    }

    /* Form Inputs */
    .date-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
        align-items: flex-start;
    }

    .input-group-custom {
        flex: 1;
    }

    .select-period {
        width: 140px;
    }

    .form-control-custom {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: 10px;
        background-color: white;
        font-size: 0.95rem;
        transition: border-color 0.2s;
    }

    .form-control-custom:focus {
        outline: none;
        border-color: var(--accent-blue);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .textarea-custom {
        min-height: 120px;
        resize: vertical;
    }

    /* Buttons */
    .actions-section {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .btn-cancel {
        background: white;
        border: 1px solid var(--border-color);
        color: var(--text-muted);
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

    .btn-cancel:hover {
        background: #f1f5f9;
        color: var(--primary-dark);
    }

    .btn-submit {
        background: var(--primary-dark);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .btn-submit:hover {
        background: #0f172a;
        transform: translateY(-1px);
    }

    .type-radio {
        display: none;
    }

    .input-label {
        font-weight: 500;
        font-size: 0.9rem;
        color: var(--primary-dark);
        margin-bottom: 0.5rem;
        display: block;
    }
</style>

<div class="form-card">
    <div class="solde-badge">
        <div class="solde-icon">
            <i class="bi bi-info-circle-fill"></i>
        </div>
        <div>
            <span class="text-muted small">Solde actuel :</span>
            <strong class="ms-1">0 jours disponibles</strong>
        </div>
    </div>

    <form asp-action="Creer" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="fw-bold text-danger small mb-3"></div>

        <label class="section-label">1. Type d'absence</label>
        <div class="absence-types-grid">
            <label class="type-card active">
                <input type="radio" name="TypeAbsence" value="Conge" class="type-radio" checked>
                <div class="type-icon icon-conge">
                    <i class="bi bi-airplane-engines"></i>
                </div>
                <div class="type-info">
                    <h4>Congé</h4>
                    <p>Congé payé annuel</p>
                </div>
            </label>

            <label class="type-card">
                <input type="radio" name="TypeAbsence" value="Permission" class="type-radio">
                <div class="type-icon icon-permission">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="type-info">
                    <h4>Permission</h4>
                    <p>Absence courte durée</p>
                </div>
            </label>

            <label class="type-card">
                <input type="radio" name="TypeAbsence" value="Mission" class="type-radio">
                <div class="type-icon icon-mission">
                    <i class="bi bi-briefcase"></i>
                </div>
                <div class="type-info">
                    <h4>Mission</h4>
                    <p>Déplacement pro</p>
                </div>
            </label>

            <label class="type-card">
                <input type="radio" name="TypeAbsence" value="Maladie" class="type-radio">
                <div class="type-icon icon-maladie">
                    <i class="bi bi-heart-pulse"></i>
                </div>
                <div class="type-info">
                    <h4>Arrêt Maladie</h4>
                    <p>Absence médicale</p>
                </div>
            </label>
        </div>

        <label class="section-label">2. Année de décision</label>
        <div class="row">
            <div class="col-md-6 mb-4">
                <label class="input-label">Année</label>
                <div class="input-group-custom">
                    <select asp-for="decisionYear" class="form-control-custom">
                        <option value="">Sélectionnez une année</option>
                        @for (var y = DateTime.Now.Year - 1; y <= DateTime.Now.Year + 1; y++)
                        {
                            <option value="@y">@y</option>
                        }
                    </select>
                    <span asp-validation-for="decisionYear" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <label class="section-label">3. Période de l'absence</label>
        <div class="row">
            <div class="col-md-6 mb-4">
                <label class="input-label">Date de départ</label>
                <div class="date-row">
                    <div class="input-group-custom">
                        <input asp-for="DateDebut" type="date" class="form-control-custom" />
                        <span asp-validation-for="DateDebut" class="text-danger small"></span>
                    </div>
                    <div class="select-period">
                        <select asp-for="DebutApresMidi" class="form-control-custom">
                            <option value="false">Matin</option>
                            <option value="true">Après-midi</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <label class="input-label">Date de retour</label>
                <div class="date-row">
                    <div class="input-group-custom">
                        <input asp-for="DateFin" type="date" class="form-control-custom" />
                        <span asp-validation-for="DateFin" class="text-danger small"></span>
                    </div>
                    <div class="select-period">
                        <select asp-for="FinApresMidi" class="form-control-custom">
                            <option value="false">Matin</option>
                            <option value="true">Après-midi</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <label class="section-label">4. Informations complémentaires</label>
        <div class="mb-4">
            <label class="input-label">Motif de la demande</label>
            <textarea asp-for="Motif" class="form-control-custom textarea-custom" placeholder="Précisez le motif de votre absence..."></textarea>
            <span asp-validation-for="Motif" class="text-danger small"></span>
        </div>

        <div class="actions-section">
            <button type="button" class="btn-cancel">Annuler</button>
            <button type="submit" class="btn-submit">
                <i class="bi bi-send-fill"></i>
                Soumettre la demande
            </button>
        </div>
    </form>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script>
    document.querySelectorAll('.type-card').forEach(card => {
        card.addEventListener('click', function() {
            document.querySelectorAll('.type-card').forEach(c => c.classList.remove('active'));
            this.classList.add('active');
            this.querySelector('input[type="radio"]').checked = true;
        });
    });
</script>
}
